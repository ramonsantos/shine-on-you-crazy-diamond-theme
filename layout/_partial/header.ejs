<header class="header">
  <div class="header-content content-width">
    <h1>
      <a class="site-title" href="<%- url_for() %>" title="<%= config.subtitle %>">Ramon Santos</a>
    </h1>

    <a id="menuBar" class="mobile-menu-bar" href="javascript:void(0);"><i class="fa fa-bars" aria-hidden="true"></i></a>

    <nav class="header-menu">
      <ul>
        <!-- Menu -->
        <% for (var i in theme.menu) { %>
          <% if (url_for(theme.menu[i]) === (url_for(path).substring(0, url_for(path).lastIndexOf('/')) || "/")) { %>
            <li class="active-menu">
          <% } else { %>
            <li>
          <% } %>
            <a href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
</header>
